<odoo>
    <!-- Définition de la vue liste pour la gestion de la file d'attente -->
    <record id="view_file_import_queue_tree" model="ir.ui.view">
        <field name="name">file.import.queue.tree</field>
        <field name="model">file.import.queue</field>
        <field name="arch" type="xml">
            <tree string="Fichiers en importation">
                <field name="create_date" string="Date"/>
                <field name="name" string="Nom du fichier"/>
                <field name="transfer_reference" string="Référence stock"/>
                <field name="transfer_reference" string="Référence picking"/>
                <field name="status" string="Statut"/>
            </tree>
        </field>
    </record>

    <!-- Définition de la vue de recherche pour la gestion de la file d'attente -->
    <record id="view_file_import_queue_search" model="ir.ui.view">
        <field name="name">file.import.queue.search</field>
        <field name="model">file.import.queue</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="status"/>
            </search>
        </field>
    </record>

    <!-- Action pour ouvrir la vue liste -->
    <record id="action_file_import_queue" model="ir.actions.act_window">
        <field name="name">File Import Queue</field>
        <field name="res_model">file.import.queue</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_file_import_queue_tree"/>
        <field name="search_view_id" ref="view_file_import_queue_search"/>
    </record>
    
    <menuitem id="menu_inventory_import_stock" 
              name="Importation Stock"
              sequence="3"
              web_icon="/sopromer_sage_interface/static/description/img/icon.png"
              action="action_file_import_queue"/>


</odoo>
